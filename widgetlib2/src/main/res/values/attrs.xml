<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <attr format="reference|string" name="emptyText"/>
  <attr format="reference" name="emptyImgId"/>
  <attr format="boolean" name="emptyImageVisible"/>

  <attr format="reference|string" name="errorText"/>
  <attr format="reference" name="errorImgId"/>
  <attr format="boolean" name="errorImageVisible"/>

  <attr format="reference|string" name="noNetWorkText"/>
  <attr format="reference" name="noNetWorkImgId"/>
  <attr format="boolean" name="noNetWorkImageVisible"/>

  <attr format="reference|color" name="allTipTextColor"/>
  <attr format="integer" name="allTipTextSize"/>
  <attr format="reference|color" name="allPageBackgroundColor"/>

  <attr format="reference|string" name="reloadBtnText"/>
  <attr format="integer" name="reloadBtnTextSize"/>
  <attr format="reference|color" name="reloadBtnTextColor"/>
  <attr format="reference" name="reloadBtnBackgroundResource"/>
  <attr format="boolean" name="reloadBtnVisible"/>
  <attr format="boolean" name="emptyReloadBtnVisible"/>
  <attr name="reloadClickArea">
    <enum name="full" value="20"/>
    <enum name="button" value="21"/>
  </attr>

  <declare-styleable name="HeaderFloatHintView">
    <attr format="string|reference" name="tvHint"/>
  </declare-styleable>

  <declare-styleable name="NavigationView">
    <attr format="string|reference" name="bar_title"/>
    <attr format="string|reference" name="textBack"/>
    <attr format="boolean" name="isShowBackKey"/>
  </declare-styleable>

  <!--测划控件-->
  <declare-styleable name="EasySwipeMenuLayout">
    <attr format="reference" name="leftMenuView"/>
    <attr format="reference" name="rightMenuView"/>
    <attr format="reference" name="contentView"/>
    <attr format="boolean" name="canRightSwipe"/>
    <attr format="boolean" name="canLeftSwipe"/>
    <attr format="float" name="thresholdX"/>
    <attr format="float" name="fraction"/>
  </declare-styleable>

  <declare-styleable name="LoadDataLayout">
    <attr format="reference|string" name="loadingText"/>
    <attr format="integer" name="loadingTextSize"/>
    <attr format="reference|color" name="loadingTextColor"/>
    <attr format="reference" name="loadingViewLayoutId"/>

    <attr name="emptyText"/>
    <attr name="emptyImgId"/>
    <attr name="emptyImageVisible"/>

    <attr name="errorText"/>
    <attr name="errorImgId"/>
    <attr name="errorImageVisible"/>

    <attr name="noNetWorkText"/>
    <attr name="noNetWorkImgId"/>
    <attr name="noNetWorkImageVisible"/>

    <attr name="allTipTextColor"/>
    <attr name="allTipTextSize"/>
    <attr name="allPageBackgroundColor"/>

    <attr name="reloadBtnText"/>
    <attr name="reloadBtnTextSize"/>
    <attr name="reloadBtnTextColor"/>
    <attr name="reloadBtnBackgroundResource"/>
    <attr name="reloadBtnVisible"/>
    <attr name="emptyReloadBtnVisible"/>
    <attr name="reloadClickArea"/>

  </declare-styleable>

  <declare-styleable name="RoundedImageView">
    <attr format="dimension" name="riv_corner_radius"/>
    <attr format="dimension" name="riv_corner_radius_top_left"/>
    <attr format="dimension" name="riv_corner_radius_top_right"/>
    <attr format="dimension" name="riv_corner_radius_bottom_left"/>
    <attr format="dimension" name="riv_corner_radius_bottom_right"/>
    <attr format="dimension" name="riv_border_width"/>
    <attr format="color" name="riv_border_color"/>
    <attr format="boolean" name="riv_mutate_background"/>
    <attr format="boolean" name="riv_oval"/>
    <attr name="android:scaleType"/>
    <attr name="riv_tile_mode">
      <enum name="clamp" value="0"/>
      <enum name="repeat" value="1"/>
      <enum name="mirror" value="2"/>
    </attr>
    <attr name="riv_tile_mode_x">
      <enum name="clamp" value="0"/>
      <enum name="repeat" value="1"/>
      <enum name="mirror" value="2"/>
    </attr>
    <attr name="riv_tile_mode_y">
      <enum name="clamp" value="0"/>
      <enum name="repeat" value="1"/>
      <enum name="mirror" value="2"/>
    </attr>
  </declare-styleable>

  <declare-styleable name="MenuControllerLayout" tools:ignore="ResourceName">
    <attr format="dimension" name="radiusSize"/>
    <attr format="dimension" name="bulgeSize"/>
    <attr format="dimension" name="offsetSize"/>
    <attr format="enum" name="siteMode">
      <enum name="top" value="0"/>
      <enum name="left" value="1"/>
      <enum name="right" value="2"/>
      <enum name="bottom" value="3"/>
    </attr>
  </declare-styleable>
</resources>
